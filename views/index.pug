doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        title Minecraft BDS Panel

        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous")
        link(href="/stylesheets/main.css" rel="stylesheet" type="text/css")
    body
        .container-fluid
            .row.mb-3
                .col
                    h1 Minecraft Bedrock Dedicated Server Panel

            .row.mb-3
                .col
                    h2 Configuration
                    #config
                        .row.mb-3
                            .col
                                input#txtBdsPath.form-control(type="text" placeholder="Minecraft BDS Path")
                        .row.mb-3
                            .col
                                input#txtPapyrusPath.form-control(type="text" placeholder="Papyrus CS Path")
                        .row.mb-3
                            .col
                                .btn-group(role="group" aria-label="Basic radio toggle button group")
                                    input#bdsTypeWindows.btn-check(type="radio" name="bdsType" autocomplete="off" value="0")
                                    label.btn.btn-outline-primary(for="bdsTypeWindows") Windows

                                    input#bdsTypeUbuntu.btn-check(type="radio" name="bdsType" autocomplete="off" value="1")
                                    label.btn.btn-outline-primary(for="bdsTypeUbuntu") Ubuntu
                        .row.mb-3
                            .col
                                button#btnUpdate.btn.btn-outline-secondary(type="button") Update

                        .row.mb-3
                            .col World:&nbsp;
                                b.badge.rounded-pill.bg-info#world
                        .row.mb-3
                            .col Mode:&nbsp;
                                b.badge.rounded-pill.bg-warning#gameMode
                        .row.mb-3
                            .col Difficulty:&nbsp;
                                b.badge.rounded-pill.bg-danger#difficulty

                        .row.mb-3
                            .col
                                .input-group
                                    button#btnUpdateMap.btn.btn-outline-secondary(type="button") Update Map
                                    button#btnShowMap.btn.btn-outline-secondary(type="button") Show Map

            .row.mb-3
                .col
                    h2 Connected Users
                    ul#users.list-group

            .row.mb-3
                #commands.col
                    h2 Commands

                    .input-group.mb-3
                        button#btnStart.btn.btn-success(type="button") Start
                        button#btnStop.btn.btn-danger(type="button") Stop

            .row.mb-3
                .col
                    pre#output

            .row.mb-3
                #input.col
                    .input-group.mb-3
                        input#txtConsole.form-control(type="text" placeholder="Command")
                        button#btnSend.btn.btn-primary(type="button") Send
                        button#btnClear.btn.btn-outline-secondary(type="button") Clear

            .row.mb-3
                .col
                    h2 Fast Commands
                    .row.mb-2
                        .col-auto.mt-2
                            label(for="fastTarget") Target
                        .col
                            select#fastTarget.form-control
                    .row
                        .col-2.d-grid.gap-2.my-2
                            button#btnFullSet.btn.btn-secondary(type="button") Full Set
                        .col-2.d-grid.gap-2.my-2
                            button#btnEnchantHelmet.btn.btn-secondary(type="button") Enchant Helmet
                        .col-2.d-grid.gap-2.my-2
                            button#btnEnchantChestplate.btn.btn-secondary(type="button") Enchant Chestplate
                        .col-2.d-grid.gap-2.my-2
                            button#btnEnchantLeggings.btn.btn-secondary(type="button") Enchant Leggings
                        .col-2.d-grid.gap-2.my-2
                            button#btnEnchantBoots.btn.btn-secondary(type="button") Enchant Boots
                        .col-2.d-grid.gap-2.my-2
                            button#btnEnchantSword.btn.btn-secondary(type="button") Enchant Sword
                        .col-2.d-grid.gap-2.my-2
                            button#btnEnchantPickaxe.btn.btn-secondary(type="button") Enchant Pickaxe
                        .col-2.d-grid.gap-2.my-2
                            button#btnEnchantBow.btn.btn-secondary(type="button") Enchant Bow
                        .col-2.d-grid.gap-2.my-2
                            button#btnEnchantShield.btn.btn-secondary(type="button") Enchant Shield
                        .col-2.d-grid.gap-2.my-2
                            button#btnThunder.btn.btn-secondary(type="button") Thunder
                        .col-2.d-grid.gap-2.my-2
                            button#btnGiveStack.btn.btn-secondary(type="button") Give Stack

        #mapModal.modal.fade(tabindex="-1" aria-labelledby="mapModalLabel" aria-hidden="true")
            .modal-dialog.modal-fullscreen
                .modal-content
                    .modal-header
                        h5#mapModalLabel.modal-title World Map
                        button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
                    .modal-body
                        iframe#mapFrame
                    .modal-footer
                        button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Close

        #giveItemModal.modal.fade(tabindex="-1" aria-labelledby="giveItemLabel" aria-hidden="true")
            .modal-dialog
                .modal-content
                    .modal-header
                        h5#giveItemLabel.modal-title Select item
                        button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
                    .modal-body
                        .row
                            .col-2
                                label(for="itemId")
                            .col-10
                                select#itemId.form-control
                        .row
                            .col-2
                                label(for="value")
                            .col-10
                                select#value.form-control
                        .row
                            .col-2
                                label(for="quantity")
                            .col-10
                                input#quantity(type="text")
                    .modal-footer
                        button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Close
                        button.btn.btn-primary Send command

        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous")
        script(src="/socket.io/socket.io.js")
        script(src="/javascripts/main.js")